{
    "name": "conjugator",
    "version": "2.0.0",
    "type": "module",
    "main": "./lib/conjugateVerb.js",
    "types": "./lib/conjugateVerb.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "import": "./lib/conjugateVerb.js",
            "types": "./lib/conjugateVerb.d.ts"
        },
        "./inflect": {
            "import": "./lib/inflect.js",
            "types": "./lib/inflect.d.ts"
        },
        "./styles": {
            "import": "./lib/styles.js",
            "types": "./lib/styles.d.ts"
        },
        "./CSV": {
            "import": "./lib/CSV.js",
            "types": "./lib/CSV.d.ts"
        },
        "./lib/*": "./lib/*"
    },
    "description": "Conjugator inflects and conjugates Spanish verbs",
    "keywords": [
        "conjugation",
        "inflection",
        "linguistic",
        "globalization",
        "es",
        "Spanish",
        "Espanol",
        "espaÃ±ol"
    ],
    "homepage": "https://github.com/ehoogerbeets/conjugator",
    "bugs": "https://github.com/ehoogerbeets/issues",
    "license": "Apache-2.0",
    "author": {
        "name": "Edwin Hoogerbeets",
        "email": "ehoogerbeets@gmail.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        }
    ],
    "files": [
        "bin",
        "lib",
        "data",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.txt"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:ehoogerbeets/conjugator.git"
    },
    "engines": {
        "node": ">= 14.0.0"
    },
    "scripts": {
        "build": "tsc",
        "clean": "node scripts/clean.mjs",
        "prebuild": "npm run clean",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "npm run build && node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
        "test:e2e": "npm run build && cd test-e2e && npm install && npm test",
        "prepublishOnly": "npm run build"
    },
    "directories": {
        "test": "test",
        "lib": "lib",
        "data": "data"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "jest": "^30.2.0",
        "typescript": "^5.9.3"
    },
    "bin": "./bin/conjugator"
}
